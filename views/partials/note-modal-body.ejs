<div class="modal-body">
    <div>
      <p id="id-note" style="display: none;"></p>
      <label for="title">Title</label>
      <input type="input" class="form-control" id="title" placeholder="Enter your title...">
    </div>
    <div>
      <label for="text">Text</label>
      <input type="text" class="form-control" id="text" placeholder="Enter some text..." name="text">
    </div>
    <div>
      <label for="importance">Choose a importance:</label>
      <select id="importance" name="importance ">
        <% data[2].forEach((importance)=>{%>
            <option value="<%=importance.id%>"><%=importance.text_type%></option>
        <% });%>
      </select>
    </div>
    <div>
      <label for="time ">Time of the note</label>
      <input type="datetime-local" id="time" name="time ">
    </div>
    <div>
      <label for="link">Select a link:</label>
      <select id="link" name="link">
        <option value=-1>User</option>
        <% data[0].forEach((task)=>{%>
            <option value=<%=task.id%>><%=task.name%></option>
            <% });%>
      </select>
    </div>